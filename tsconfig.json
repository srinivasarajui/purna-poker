{
    "compilerOptions": {
        "incremental": true,
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "dom",
            "ESNext"
        ],
        "allowJs": true,
        "checkJs": false,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "useUnknownInCatchVariables": false,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "jest",
            "node"
        ],
        "baseUrl": "."
    },
    "include": [
        "scripts/*"
    ],
    "references": [
        {
            "path": "apps/backend",
            "name": "backend"
        }
    ]
}